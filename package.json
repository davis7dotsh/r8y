{
	"name": "@r8y/root",
	"private": true,
	"scripts": {
		"dev": "turbo run dev --ui tui",
		"check": "turbo run check",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,svelte,js,json,md}\"",
		"types": "turbo run check-types",
		"clean": "find . -type d \\( -name \"node_modules\" -o -name \"dist\" -o -name \"build\" -o -name \".turbo\" -o -name \".svelte-kit\" \\) -prune -exec rm -rf {} + 2>/dev/null || true",
		"docker:web": "docker build -f docker/Dockerfile.web -t r8y-web .",
		"docker:bg": "docker build -f docker/Dockerfile.bg -t r8y-bg .",
		"prepare": "effect-language-service patch",
		"db": "bun run --cwd packages/db src/cli.ts",
		"backfill": "BAML_LOG=warn bun run --cwd packages/channel-sync src/scripts/backfill.ts backfill"
	},
	"devDependencies": {
		"@effect/language-service": "^0.62.5",
		"@types/bun": "^1.3.5",
		"dotenv-cli": "^11.0.0",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"turbo": "^2.7.1",
		"typescript": "^5.9.3"
	},
	"packageManager": "bun@1.3.4",
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
